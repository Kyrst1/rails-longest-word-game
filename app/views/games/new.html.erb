<h1><strong>NEW GAME</strong></h1>

<ul>
<% @letters.each do |letter| %>
  <li><strong><%= letter %></strong></li>
  <%end%>
</ul>

<h2>What is the longest word you can find ?</h2>
<form classe='form' action="/score" method="POST">
  <input id="btn" type="text" name="score" placeholder="your word">
  <input id="form" type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join %>
</form>